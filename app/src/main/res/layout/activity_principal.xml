    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tres en Raya"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:typeface="monospace"/>

    <EditText
        android:id="@+id/nombreJugador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Introduce tu nombre"
        android:layout_marginTop="50dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/botonJugar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jugar"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:onClick="empezarPartida"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenido al 3 en raya más tonto del mundo"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:typeface="monospace"/>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Si estás cansado de perder al 3 en raya, esta es tu aplicación"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:typeface="monospace"/>
</LinearLayout>
